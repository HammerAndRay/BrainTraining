<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rahimbaraky.braintraining"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.braintraining.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.braintraining.About"
            android:label="@string/about_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.example.braintraining.Difficulty"
            android:label="@string/difficulty_title"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.example.braintraining.Game_screen"
            android:label="Solve"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.braintraining.Generator"
            android:label="do"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="com.example.braintraining.Prefs"
             android:screenOrientation="portrait"
            android:label="Brain Training Settings" >
        </activity>
        <activity 
            android:name="com.example.braintraining.Score"
             android:screenOrientation="portrait"
            android:label="The Score" >
        </activity>
    </application>

</manifest>